/* For each n (input), we print the #step it takes to arrive to 1 */

#include "iostream"
using namespace std;

int main(){
	int n;
	int t = 0;
	while (cin>>n){
		
		while (n>1){
			if (n%2==0) {
				++t;
				n = n/2;
				
			}
			else {		
			++t;
			n = (3*n)+1;
		}
			
		}
		cout<<t<<endl;
		t = 0;
	}
	return 0;
}
